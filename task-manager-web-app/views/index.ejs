<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
<body>
    
    <% if (errors && errors.length > 0) { %>
        <div class="error-container">
            <ul class="error-messages">
                <% errors.forEach(error => { %>
                    <li><%= error %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    
    <div class="container">
        <h1>üìúTask Managerüìú</h1>

        <!-- Search Bar -->
        <form action="/" method="GET">
            <input type="text" name="search" placeholder="Search...üîç" value="<%= searchQuery || '' %>">
            <button type="submit">Search</button>
        </form>

        <!-- Dropdown Filter for Tasks -->
        <form action="/" method="GET">
            <label for="taskFilter">üìçActivityüìç:</label>
            <select name="filter" id="taskFilter" onchange="this.form.submit()">
                <option value="All" <%= filter === 'All' ? 'selected' : '' %>>All</option>
                <option value="Completed" <%= filter === 'Completed' ? 'selected' : '' %>>Completed</option>
                <option value="Incomplete" <%= filter === 'Incomplete' ? 'selected' : '' %>>Incomplete</option>
            </select>
        </form>

        <!-- Task Form -->
        <form action="/add-task" method="POST">
            <input type="text" name="title" placeholder="Title..." required>
            <input type="text" name="description" placeholder="Description...">
            <label for="priority">‚ùóÔ∏èPriority‚ùóÔ∏è:</label>
            <select name="priority" id="priority">
                <option value="High">High</option>
                <option value="Medium" <%= filter === 'Medium' ? 'selected' : '' %>>Medium</option>
                <option value="Low">Low</option>
            </select>
            <button type="submit">‚ûï Add Task</button>
        </form>
        
        <!-- Task List -->
        <ul>
            <% tasks.forEach(task => { %>
                <li class="<%= task.completed ? 'completed' : '' %> <%= task.priority.toLowerCase() %>">
                    <% if (task.isEditing) { %>
                        <!-- Edit Form (shown when editing) -->
                        <form action="/tasks/<%= task.id %>?_method=PUT" method="POST" class="edit-form" style="display: block;">
                            <input type="text" name="title" value="<%= task.title %>" required>
                            <input type="text" name="description" value="<%= task.description %>">
                            <select name="priority">
                                <option value="High" <%= task.priority === 'High' ? 'selected' : '' %>>High</option>
                                <option value="Medium" <%= task.priority === 'Medium' ? 'selected' : '' %>>Medium</option>
                                <option value="Low" <%= task.priority === 'Low' ? 'selected' : '' %>>Low</option>
                            </select>
                            <div class="form-actions">
                                <button type="submit">Save</button>
                                <button type="button" onclick="cancelEdit('<%= task.id %>')">Cancel</button>
                            </div>
                        </form>
                    <% } else { %>
                        <!-- Task Display (normal view) -->
                        <div class="task-content">
                            <strong><%= task.title %></strong> - <%= task.description %> 
                            <span>[<%= task.priority %>]</span>
                            <div class="task-actions">
                                <form action="/toggle-task/<%= task.id %>" method="POST" style="display:inline;">
                                    <button type="submit"><%= task.completed ? 'Undo' : 'Complete' %></button>
                                </form>
                                <button onclick="enableEdit('<%= task.id %>')">Edit</button>
                                <form action="/delete-task/<%= task.id %>" method="POST" style="display:inline;">
                                    <button type="submit">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </li>
            <% }); %>
        </ul>        
    </div>

    <script>
        function enableEdit(taskId) {
            window.location.href = `/?edit=${taskId}`;
        }

        function cancelEdit(taskId) {
            window.location.href = '/';
        }
    </script>
</body>
</html>