<div class="form-group">
    <label for="title">Title *</label>
    <input type="text" id="title" name="title" 
           value="<%= formData && formData.title || '' %>"
           required
           minlength="3"
           maxlength="100"
           class="form-control <%= errors && errors.some(e => e.toLowerCase().includes('title')) ? 'is-invalid' : '' %>">
    <div class="counter" id="titleCounter" style="display: none;">
        <span><%= formData && formData.title ? formData.title.length : 0 %></span>/100
    </div>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" 
              maxlength="500"
              class="form-control <%= errors && errors.some(e => e.toLowerCase().includes('description')) ? 'is-invalid' : '' %>"></textarea>
    <div class="counter" id="descriptionCounter" style="display: none;">
        <span><%= formData && formData.description ? formData.description.length : 0 %></span>/500
    </div>
</div>
